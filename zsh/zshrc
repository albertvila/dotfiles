
if [[ -d "$HOME/.zprezto" ]]; then

  if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
    source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
  fi
fi

if [[ -d "$HOME/.oh-my-zsh" ]]; then
  source "$HOME/.oh-my-zsh.rc"
fi

source $HOME/.scripts/aliases.git.plugin.zsh
source $HOME/.scripts/aliases.zsh
source $HOME/.scripts/functions.zsh
source $HOME/.scripts/help.zsh

export PATH=~/bin:$PATH
export TERM="xterm-256color" # Needed when running tmux inside iTerm2 locally
export EDITOR="vim"

# If no GPG Suite https://help.github.com/articles/telling-git-about-your-gpg-key/
export GPG_TTY=$(tty)

export PLENV_ROOT=~/.plenv
export PLENV_SHELL=zsh
export PATH="$PLENV_ROOT/shims:$PLENV_ROOT/bin:$PATH"
