    "java.home": "/Users/albert/.jenv/versions/1.8",

    "java.jdt.ls.vmargs": "-noverify -Xmx1G -XX:+UseG1GC -XX:+UseStringDeduplication -javaagent:\"/Users/albert/.vscode/extensions/gabrielbb.vscode-lombok-0.9.7/server/lombok.jar\" -Xbootclasspath/a:\"/Users/albert/.vscode/extensions/gabrielbb.vscode-lombok-0.9.7/server/lombok.jar\"",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/out": true,
        "**/.project": true,
        "**/.classpath": true,
        "**/.settings": true,
        "**/.gradle": true,
        "**/.idea": true,
        "**/.serverless": true,
        ".vstags": true,
        "**/.factorypath": true
    },
