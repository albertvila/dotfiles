    "workbench.colorCustomizations": {
        //"editor.lineHighlightBackground": "#220815",
        "editor.selectionBackground": "#7288a8",
        "editor.wordHighlightBackground": "#3f2c33",
        //"editorCursor.foreground": "#F12360"
